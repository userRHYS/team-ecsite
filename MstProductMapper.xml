<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.internous.samurai.model.mapper.MstProductMapper">

	<select id="findByCategoryAndProductName" resultType="jp.co.internous.samurai.model.domain.MstProduct">
	  SELECT * FROM mst_product
    WHERE category_id = #{category} AND
    <foreach item="keyword" collection="keywords" open="(" close=")" separator="OR">
      (product_name LIKE '%${keyword}%') 
    </foreach>
    ORDER BY id;
	</select>
	
	<select id="findByProductName" resultType="jp.co.internous.samurai.model.domain.MstProduct">
		SELECT * FROM mst_product WHERE 
    <foreach item="keyword" collection="keywords" open="" close="" separator="OR">
      (product_name LIKE '%${keyword}%')
    </foreach>
    ORDER BY id;
	</select>
	
</mapper>